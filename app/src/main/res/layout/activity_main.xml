<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/eTInputID" android:hint="@string/enter_the_number_id"
            style="@style/Widget.AppCompat.EditText"
            android:layout_marginTop="200dp" android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
            android:gravity="center_horizontal" android:textColor="#FFFFFF" android:textAllCaps="false"/>
    <Button
            android:text="@string/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btnSubmitID" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" android:layout_marginTop="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="74dp" android:id="@+id/tVShowID" android:layout_marginTop="20dp"
            android:layout_marginRight="15dp" android:layout_marginLeft="15dp"/>
</LinearLayout>